			<ul class="swiper-wrapper works__slides works__list w-[100%] md:!w-[1920px]">
				{worksPosts.map((works: any, index: any) => (
					<li class="swiper-slide modal-open works__slide works__item cursor-pointer hover__link" data-modal={index === worksPosts.length - 1? 0 : index + 1}>
