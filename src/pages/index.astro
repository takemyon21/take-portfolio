			});

			// モーダルの戻るボタンのクリックイベント
			$("#contact__cancel").click(function (event) {
				event.preventDefault();
				// モーダルを閉じる処理
				document.body.classList.toggle('is-active');
				modalConfirm.classList.toggle('is-active');
				enableScroll();
			});

			// 送信ボタンのクリックイベント
			$("#contact__submit").click(function (event) {
				event.preventDefault();
				const $form = $("#contact__form");
				const $button = $("#contact__submit");

				// バリデーションは確認ボタンで行われているため、ここではチェックしない
				$.ajax({
					url: "https://t-portfolio.itouke.info/sendmail20240710.php",
					type: "POST",
					data: $form.serialize(),
					dataType: "json",
					timeout: 10000,
					beforeSend: function (xhr, settings) {
						$button.attr("disabled", true);
					},
					complete: function (xhr, textStatus) {
						$button.attr("disabled", false);
					},
				})
				.done(function (data, textStatus, jqXHR) {
					$("#contact__form")[0].reset();
					alert("受付メールを送付いたしました。折り返しのご連絡までお待ちください。");
					// モーダルを閉じる処理
					document.body.classList.toggle('is-active');
					modalConfirm.classList.toggle('is-active');
					enableScroll();

				})
				.fail(function (jqXHR, textStatus, errorThrown) {
					alert("メール送信に失敗しました。管理者までご連絡ください。");
					// モーダルを閉じる処理
					document.body.classList.toggle('is-active');
					modalConfirm.classList.toggle('is-active');
					enableScroll();
				});
			});
		}
	});





